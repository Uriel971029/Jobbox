<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtIdContratacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/imagen"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <TextView
            android:id="@+id/txtIdVacante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtIdContratacion"
            android:layout_alignBaseline="@+id/txtIdContratacion"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/txtEmailClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIdContratacion"
            android:layout_toRightOf="@+id/imagen"
            android:layout_marginLeft="10dp"
            android:text="email"/>

        <TextView
            android:id="@+id/txtRatingClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIdContratacion"
            android:layout_toRightOf="@+id/txtEmailClient"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/txtIdOficio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtEmailClient"
            android:layout_alignBaseline="@+id/txtEmailClient"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/txtIdCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtIdOficio"
            android:layout_alignBaseline="@+id/txtIdOficio"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Fecha"
            android:textAppearance="?android:attr/textAppearanceSmall"

            />

        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEmailClient"
            android:layout_alignLeft="@+id/txtIdContratacion"
            android:layout_marginTop="12dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />


        <TextView
            android:id="@+id/txtCosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDescripcion"
            android:layout_alignLeft="@+id/txtDescripcion"
            android:layout_marginTop="16dp"
            android:gravity="end|left"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />


        <ImageView
            android:id="@+id/btnPagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>